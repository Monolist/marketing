---
layout: inner.hbs
title: Contact
---

<div class="title-container">
  <div class="icon-container">
    <i class="icon-envelope"></i>
  </div>
  <h5 class="title">Contact Us</h5>
</div>

<form id="contact-form" class="full-page">

  <div class="table-container">
    <div class="input-container">
      <label for="email" id="email-label">
        Your Email
        <span className="red">*</span>
      </label>
      <div class="input">
        <input type="email" id="email" placeholder="you@email.com" required />
      </div>
    </div>

    <div class="input-container">
      <label for="message" id="message-label">
        Message
        <span className="red">*</span>
      </label>
      <textarea id="message" placeholder="Your message..." class="full-width" rows="10"></textarea>
    </div>
  </div>

  <div class="error-container nudge-half--ends text-center">
  </div>

  <div class="spinner-container text-center nudge-half--ends" style="display: none;">
    {{> spinner }}
  </div>

  <div class="bottom-buttons-container">
    <div class="submit-container">
      <input type="submit" id="submit" class="btn full" value="Send" disabled="true" />
    </div>
  </div>

</form>

<div class="success-container" style="display: none;">
  <p className="nudge-half--bottom">Your message has been sent! If it requires a response, we will get back to you as soon as possible.</p>
</div>
